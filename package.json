{
    "name": "mdhelper",
    "displayName": "mdhelper",
    "description": "mdhelper",
    "version": "0.0.1",
    "publisher": "joshbax",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.bold",
        "onCommand:extension.italicize",
        "onCommand:extension.toupper",
        "onCommand:extension.tolower",
        "onCommand:extension.tounorderedlist",
        "onCommand:extension.toorderedlist",
        "onCommand:extension.tolink"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            { "command": "extension.bold", "title": "Markdown: Bold" },
            { "command": "extension.italicize", "title": "Markdown: Italicize" },
            { "command": "extension.toupper", "title": "Markdown: ToUpper" },
            { "command": "extension.tolower", "title": "Markdown: ToLower" },
            { "command": "extension.tounorderedlist", "title": "Markdown: Convert to unordered list" },
            { "command": "extension.toorderedlist", "title": "Markdown: Convert to ordered list" },
            { "command": "extension.tolink", "title": "Markdown: Convert to link" }
        ],
        "keybindings": [
            { "command": "extension.bold", "key": "ctrl+b", "when": "editorTextFocus" },
            { "command": "extension.italicize", "key": "ctrl+i", "when": "editorTextFocus" },
            { "command": "extension.toupper", "key": "ctrl+shift+u", "when": "editorTextFocus" },
            { "command": "extension.tolower", "key": "ctrl+shift+l", "when": "editorTextFocus" },
            { "command": "extension.tounorderedlist", "key": "ctrl+u", "when": "editorTextFocus" },
            { "command": "extension.toorderedlist", "key": "ctrl+o", "when": "editorTextFocus" },
            { "command": "extension.tolink", "key": "ctrl+l", "when": "editorTextFocus" }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}